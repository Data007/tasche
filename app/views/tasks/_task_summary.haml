- @project = project if project

.task
  .name= link_to task_summary.name, project_task_path(:project_id => @project.id, :id => task_summary.id)
  .description= textilize truncate task_summary.description, :omission => " .. (#{link_to('more details', project_task_path(:project_id => @project.id, :id => task_summary.id))})", :length => 14, :word_count => true
  .priority
    This task has a priority of
    = task_summary.priority
  .users_detail
    %h4 The following people are on this task.
    - task_summary.users.each do |user|
      .user_details
        .name= link_to user.nickname, user_path(user.id)
